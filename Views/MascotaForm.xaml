<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="pet_shop.Views.MascotaForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:pet_shop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{StaticResource ImagenFondo}"
    mc:Ignorable="d">
    <Grid>
        <Image
            Height="80"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="C:\Users\l.campuzano.gonzalez\Desktop\pet_shop\Assets\perfilMascotas.png" />

        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <!--  Titulo  -->
            <TextBlock
                x:Name="titulo"
                Grid.Row="0"
                Margin="0,0,0,10"
                Foreground="#8E44AD"
                Style="{ThemeResource HeaderTextBlockStyle}"
                Text="Registrar Mascota" />

            <!--  Validacion Mascota  -->
            <InfoBar
                x:Name="alert"
                FontSize="10"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Background="Silver"
                Margin="0,0,0,10"
                IsOpen="False" />

            <!--  Nombre  -->
            <TextBox
                x:Name="txtNombre"
                Margin="0,0,0,10"
                Background="#8E44AD"
                Foreground="#800080"
                PlaceholderForeground="#E6E6FA"
                GotFocus="NombreSeleccionado"
                PlaceholderText="Nombre"
                TextChanged="NombreCambiarTexto" />
            <!--  Validacion Nombre  -->
            <TextBlock
                x:Name="errorNombre"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Raza  -->
            <TextBox
                x:Name="txtRaza"
                Margin="0,0,0,10"
                Background="#8E44AD"
                Foreground="#800080"
                PlaceholderForeground="#E6E6FA"
                GotFocus="RazaSeleccionada"
                PlaceholderText="Raza"
                TextChanged="RazaCambiarTexto" />
            <!--  Validacion Raza  -->
            <TextBlock
                x:Name="errorRaza"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Edad  -->
            <TextBox
                x:Name="txtEdad"
                
                Background="#8E44AD"
                Foreground="#800080"
                PlaceholderForeground="#E6E6FA"
                Margin="0,0,0,10"
                GotFocus="EdadSeleccionada"
                PlaceholderText="Edad"
                TextChanged="EdadCambiarTexto" />
            <!--  Validacion Edad  -->
            <TextBlock
                x:Name="errorEdad"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Lista de Usuarios  -->
            <ComboBox
                x:Name="cmbUsuarios"
                Margin="0,0,0,10"
                Background="#8E44AD"
                Foreground="#800080"
                PlaceholderForeground="#E6E6FA"
                DisplayMemberPath="Nombre"
                ItemsSource="{x:Bind Usuarios, Mode=OneWay}"
                PlaceholderText="Seleccione un usuario"
                SelectionChanged="CmbUsuarios" />
           
            <!--  Validacion Usuario  -->
            <TextBlock
                x:Name="errorSocio"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Boton guardar  -->
            <Button
                x:Name="btnGuardar"
                HorizontalAlignment="Center"
                Grid.Row="11"
                Background="Green"
                Click="btn_RegistrarMascota"
                Content="Guardar"
                Foreground="#800080"
                IsEnabled="False" />
        </StackPanel>
    </Grid>
</Page>
