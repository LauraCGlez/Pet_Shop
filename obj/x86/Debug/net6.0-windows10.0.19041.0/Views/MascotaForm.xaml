<?xml version="1.0" encoding="utf-8" ?>
<Page x:ConnectionId='1'
    x:Class="pet_shop.Views.MascotaForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:pet_shop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{StaticResource ImagenFondo}"
    mc:Ignorable="d">
    <Grid>
        <Image
            Height="80"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="C:\Users\l.campuzano.gonzalez\Desktop\gitVersion\Assets\perfilMascotas.png" />

        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <!--  Titulo  -->
            <TextBlock x:ConnectionId='2'
                x:Name="titulo"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Foreground="#8E44AD"
                FontFamily="Comic Sans MS"
                FontSize="30"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Margin="0,20,0,10"
                Text="Registrar Mascota" />

            <!--  Validacion Mascota  -->
            <InfoBar x:ConnectionId='3'
                x:Name="alert"
                FontSize="10"
                Background="Silver"
                Margin="0,0,0,10"
                IsOpen="False" />

            <!--  Nombre  -->
            <TextBox x:ConnectionId='4'
                x:Name="txtNombre"
                Margin="0,0,0,10"
                Foreground="#8E44AD"
                PlaceholderForeground="MediumPurple"
                FontFamily="Comic Sans MS"
                                             
                PlaceholderText="Nombre"
                                                 />
            <!--  Validacion Nombre  -->
            <TextBlock x:ConnectionId='5'
                x:Name="errorNombre"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Raza  -->
            <TextBox x:ConnectionId='6'
                x:Name="txtRaza"
                PlaceholderForeground="MediumPurple"
                Margin="0,0,0,10"
                Foreground="#8E44AD"
                FontFamily="Comic Sans MS"
                                           
                PlaceholderText="Raza"
                                               />
            <!--  Validacion Raza  -->
            <TextBlock x:ConnectionId='7'
                x:Name="errorRaza"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Edad  -->
            <TextBox x:ConnectionId='8'
                PlaceholderForeground="MediumPurple"
                x:Name="txtEdad"
                Foreground="#8E44AD"
                FontFamily="Comic Sans MS"
                Margin="0,0,0,10"
                                           
                PlaceholderText="Edad"
                                               />
            <!--  Validacion Edad  -->
            <TextBlock x:ConnectionId='9'
                x:Name="errorEdad"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Lista de Usuarios  -->
            <ComboBox x:ConnectionId='10'
                PlaceholderForeground="MediumPurple"
                x:Name="cmbUsuarios"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                Foreground="#8E44AD"
                FontFamily="Comic Sans MS"
                DisplayMemberPath="Nombre"
                                                            
                PlaceholderText="Seleccione un usuario"
                                               />
           
            <!--  Validacion Usuario  -->
            <TextBlock x:ConnectionId='11'
                x:Name="errorSocio"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Boton guardar  -->
            <Button x:ConnectionId='12'
                x:Name="btnGuardar"
                HorizontalAlignment="Center"
                Grid.Row="11"
                Background="Green"
                                            
                Content="Guardar"
                Foreground="#800080"
                IsEnabled="False" />
        </StackPanel>
    </Grid>
</Page>

